    }
  }
</style>

<script>
(function() {
  const sectionId = '{{ section.id }}';
  const searchInput = document.getElementById('kc-search-' + sectionId);
  const grid = document.getElementById('kc-grid-' + sectionId);
  const emptyState = document.getElementById('kc-empty-' + sectionId);
  const categoryBtns = document.querySelectorAll('#kc-categories-' + sectionId + ' .kc-category-btn');
  const tileWrappers = grid.querySelectorAll('.kc-tile-wrapper');

  let currentCategory = 'all';
  let currentSearch = '';

  // Category filtering
  categoryBtns.forEach(btn => {
    btn.addEventListener('click', function() {
      categoryBtns.forEach(b => b.classList.remove('active'));
      this.classList.add('active');
      currentCategory = this.dataset.category;
      filterTiles();
    });
  });

  // Search filtering
  if (searchInput) {
    searchInput.addEventListener('input', function() {
      currentSearch = this.value.toLowerCase();
      filterTiles();
    });
  }

  // Expandable tile clicks
  document.querySelectorAll('.kc-tile-expandable').forEach(tile => {
    tile.addEventListener('click', function() {
      const tileId = this.dataset.tileId;
      const contentId = tileId.replace('tile-', 'content-');
      const content = document.getElementById(contentId);

      if (!content) return;

      const isExpanded = this.classList.contains('expanded');

      // Close all other expanded tiles
      document.querySelectorAll('.kc-tile-expandable').forEach(t => {
        if (t !== this) {
          t.classList.remove('expanded');
        }
      });
      document.querySelectorAll('.kc-tile-expanded-content').forEach(c => {
        if (c !== content) {
          c.style.display = 'none';
        }
      });

      // Toggle this tile
      if (isExpanded) {
        this.classList.remove('expanded');
        content.style.display = 'none';
      } else {
        this.classList.add('expanded');
        content.style.display = 'block';

        // Smooth scroll to tile
        setTimeout(() => {
          this.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }, 100);
      }
    });
  });

  function filterTiles() {
    let visibleCount = 0;

    tileWrappers.forEach(wrapper => {
      const category = wrapper.dataset.category;
      const title = wrapper.dataset.title.toLowerCase();
      const description = wrapper.dataset.description.toLowerCase();

      const matchesCategory = currentCategory === 'all' || category === currentCategory;
      const matchesSearch = currentSearch === '' ||
                           title.includes(currentSearch) ||
                           description.includes(currentSearch);

      if (matchesCategory && matchesSearch) {
        wrapper.style.display = 'flex';
        visibleCount++;
      } else {
        wrapper.style.display = 'none';

        // Close expanded content if filtered out
        const expandableTile = wrapper.querySelector('.kc-tile-expandable');
        if (expandableTile) {
          expandableTile.classList.remove('expanded');
        }
        const expandedContent = wrapper.querySelector('.kc-tile-expanded-content');
        if (expandedContent) {
          expandedContent.style.display = 'none';
        }
      }
    });

    // Show/hide empty state
    if (emptyState) {
      emptyState.style.display = visibleCount === 0 ? 'block' : 'none';
    }
  }
})();
</script>

